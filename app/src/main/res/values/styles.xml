<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegisterInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textCursorDrawable">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DaysChipBar" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_day_chip</item>
        <item name="android:textSize">28sp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/bg_text_day_chip</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">64dp</item>
    </style>
</resources>
