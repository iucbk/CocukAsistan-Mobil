<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="2dp" android:top="2dp">
                <shape>
                    <corners android:bottomLeftRadius="48dp" android:topLeftRadius="48dp" />
                    <solid android:color="#702d2d2d" />
                    <padding android:bottom="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#e78fb3" />
                    <corners android:bottomLeftRadius="40dp" android:topLeftRadius="40dp" />
                    <padding android:bottom="12dp" android:top="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>