<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="2dp" android:top="2dp">
                <shape>
                    <corners android:bottomRightRadius="48dp" android:topRightRadius="48dp" />
                    <solid android:color="#702d2d2d" />
                    <padding android:bottom="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/general_text_color" />
                    <corners android:bottomRightRadius="40dp" android:topRightRadius="40dp" />
                    <padding android:bottom="16dp" android:top="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>