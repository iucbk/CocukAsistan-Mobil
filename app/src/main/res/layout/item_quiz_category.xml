<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnQuizCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:elevation="12dp"
        android:lineSpacingExtra="4sp"
        android:paddingStart="32dp"
        android:paddingTop="20dp"
        android:paddingEnd="32dp"
        android:paddingBottom="20dp"
        android:textColor="@color/general_text_color"
        android:textSize="24sp"
        app:backgroundTint="@color/general_button_bg"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_books"
        app:iconTintMode="multiply"
        tools:text="Hayvanlar" />

    <com.iucbk.cocuk_asistan.customviews.CircleButton
        android:id="@+id/viewQuizState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        android:padding="16dp"
        android:translationZ="20dp"
        tools:src="@drawable/ic_cross" />
</FrameLayout>